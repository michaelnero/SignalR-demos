<UserControl x:Class="StockTrader.Windows.Trader.Views.Balance.BalanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock HorizontalAlignment="Right" FontSize="21.333" Margin="0,0,6,0">Account:</TextBlock>
            <TextBlock Name="AccountID" HorizontalAlignment="Right" FontSize="21.333" />
        </StackPanel>
        <TextBlock Name="Balance" HorizontalAlignment="Right" FontSize="64" Margin="0,6,0,0" />
    </StackPanel>
</UserControl>
